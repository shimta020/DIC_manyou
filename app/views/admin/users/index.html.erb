<h2>ユーザー一覧</h2>
<div class="contents">
  <div class="row">
    <table class='table table-striped table-hover'>
      <tr class="row">
        <th class="col-md-1">id</th>
        <th class="col-md-1">名前</th>
        <th class="col-md-2">Email</th>
        <th class="col-md-1">タスク数</th>
        <th class="col-md-1">管理者権限</th>
        <th class="col-md-3">作成日時</th>
        <th class="col-md-1"></th>
        <th class="col-md-1"></th>
        <th class="col-md-1"></th>
      </tr>
      <% @users.each do |user| %>
      <tr class="row">
        <td class="task_row"><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin? ? '管理者' : '一般ユーザー' %></td>
        <td><%= user.created_at %></td>
        <td class='index_btn'><%= link_to '詳細', admin_user_path(user.id), class:"btn btn-default" %></td>
        <td class='index_btn'><%= link_to '編集', edit_admin_user_path(user.id), class:"btn btn-default" %></td>
        <td class='index_btn'><%= link_to '削除', admin_user_path(user.id), method: :delete, data: {confirm: '削除してよろしいですか？'}, class:"btn btn-danger" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<%= link_to 'ユーザー新規作成', new_admin_user_path, class:"btn btn-primary" %>
<%= link_to 'ラベル作成', new_label_path, class:"btn btn-info" %>
<%= link_to 'ラベル一覧', labels_path, class:"btn btn-success" %>
<%= link_to 'タスク一覧へ', tasks_path, class:"btn btn-default" %>
<div>
<%= paginate @users %>
</div>