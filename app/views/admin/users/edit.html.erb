<h3>ユーザー編集</h3>
<%= form_with(scope: :user, url: admin_user_path(@user), method: :patch, local: true) do |f| %>
  <% if @user.errors.any? %>
    <p><%= @user.errors.count %>件のエラーがあります</p>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <div class="f_form task_title form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="f_form task_content form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class:"form-control" %>
  </div>
  <div class="f_form task_deadline form-group">
    <p>admin</p>
    <label class="btn btn-default">
      <%= f.hidden_field :admin, value: false %>
      <%= f.check_box :admin, {}, true, false %>
    </label>
  </div>
  <%= f.submit "Update account", class:"btn btn-primary" %>
<% end %>