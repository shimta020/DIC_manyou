<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="task_deadline">
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>
  </div>
  <div class="task_status">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys, include_blank: 'ステータスを選択してください' %>
  </div>
  <div class="task_priority">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys, include_blank: 'ステータスを選択してください' %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "一覧画面にもどる", tasks_path %>